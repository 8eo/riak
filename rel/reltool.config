%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 et
{sys, [
       {lib_dirs, ["../deps",
                   "../apps"]},
       {rel, "riak", "0.12.0",
        [
         kernel,
         stdlib,
         sasl,
         os_mon,
         crypto,
         runtime_tools,
         snmp,
         mnesia,
         erlang_js,
         mochiweb,
         webmachine,
         luke,
         bitcask,
         riak_core,
         riak_kv,
         riak_repl,
         riak_snmp,
         riak_jmx
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "riak"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, erlang_js, [{incl_cond, include}]},
       {app, luke, [{incl_cond, include}]},
       {app, ebloom, []},
       {app, bitcask, [{incl_cond, include}]},
       {app, riak_core, [{incl_cond, include}]},
       {app, riak_kv, [{incl_cond, include}]},
       {app, riak_repl, [{incl_cond, include}]},
       {app, riak_snmp, [{incl_cond, include}]},
       {app, riak_jmx,  [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{target_dir, "riak"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "data/snmp/agent/db"},
           {mkdir, "log/sasl"},
           {mkdir, "etc/snmp/agent/conf"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {copy, "overlay/bin/riak-repl", "bin/riak-repl"},
           {copy, "overlay/etc/snmp", "etc"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/riak", "bin/riak"},
           {template, "files/riak-admin", "bin/riak-admin"},
           {template, "files/agent.conf", "etc/snmp/agent/conf/agent.conf"}
          ]}.
